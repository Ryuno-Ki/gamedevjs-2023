{
  "name": "gamedevjs-2023",
  "version": "0.1.0",
  "description": "Theme is TIME.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild app=src/index.js --bundle --minify --sourcemap=inline --banner:js='/* License: AGPL v3 or newer */' --outdir=dist",
    "build:dev": "esbuild app=src/index.js --bundle --outdir=dist",
    "clean": "rimraf ./dist && mkdir ./dist && touch ./dist/.gitkeep",
    "copy": "cp ./src/index.html ./dist",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "standard src --global requestAnimationFrame",
    "lint:test": "standard test --env mocha",
    "postbuild": "yarn copy",
    "postinstall": "husky install",
    "postpack": "pinst --enable",
    "prebuild": "yarn lint && yarn types && yarn test:ci && yarn clean",
    "prebuild:dev": "yarn clean",
    "prepack": "pinst --disable",
    "prepare": "husky install",
    "serve:dev": "esbuild src/index.js --bundle --servedir=dist --outdir=dist",
    "test": "mocha",
    "test:ci": "c8 mocha -R tap",
    "tsc": "tsc",
    "tsd": "tsd",
    "types": "tsc --noEmit false --emitDeclarationOnly true"
  },
  "repository": {
    "type": "git",
    "url": "ryunoki@jaenis.ch:ryuno-ki/gamedevjs-2023.git"
  },
  "keywords": [
    "gamedevjs",
    "game",
    "jam"
  ],
  "author": "Andr√© Jaenisch",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@commitlint/cli": "17.6.1",
    "@commitlint/config-conventional": "17.6.1",
    "c8": "7.13.0",
    "chai": "4.3.7",
    "chai-dom": "1.11.0",
    "esbuild": "0.17.16",
    "husky": "8.0.3",
    "jsdom": "21.1.1",
    "mocha": "10.2.0",
    "pinst": "3.0.0",
    "rimraf": "5.0.0",
    "sinon": "15.0.3",
    "sinon-chai": "3.7.0",
    "standard": "17.0.0",
    "tsd": "0.28.1",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "socket.io": "4.6.1"
  }
}
